{
    "parser": "babel-eslint",
    "extends": [
        "standard",
    ],
    "plugins": [
        "babel",
        "promise",
    ],
    "env": {
        "browser": true
    },
    "globals": {
        "__DEV__": false,
        "__TEST__": false,
        "__PROD__": false,
        "__COVERAGE__": false
    },
    "rules": {
        "key-spacing": "off",
        "jsx-quotes": [2, "prefer-double"],
        "max-len": [2, 120, 2],
        "object-curly-spacing": [2, "never"],
        "semi": [2, "never"],
        "comma-dangle": "off",
        "complexity": ["error", { "max": 4 }],
        "space-before-function-paren": ["error", "always"],
        "space-before-blocks": ["error", "always"],
        "eol-last": ["error", "always"]
    }
}
